rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for website landing: anyone (unauthenticated or authenticated) can read
    // This makes the landing pages work without requiring users to sign in.
    match /{document=**} {
      allow read: if true;

      // Restrict writes so only authenticated admins can modify data.
      // Recommended workflow: set a custom claim `admin=true` for admin users
      // using the Firebase Admin SDK. Example (server-side):
      // admin.auth().setCustomUserClaims(uid, { admin: true });
      // Then the client (authenticated) will be allowed to write if that claim exists.
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
